
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <% if @user.password_required? %>
    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>
  <% end %>
    <div><%= f.label :name %><br />
    <%= f.text_field :name %></div>
    <div><%= f.label :position_title %><br />
    <%= f.text_field :position_title %></div>

    <div>
      <%= radio_button_tag(:type, "volunteer") %>
      <%= label_tag(:type_volunteer, "I want to volunteer") %>
      <%= radio_button_tag(:type, "sponsor") %>
      <%= label_tag(:type_sponsor, "I represent a non profit and have a task I want to post up") %></div>


  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>


