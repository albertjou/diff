<div class="row">
  <div class="col-xs-12 see-me text-center">
    <div class="row">
      <h1>Hours contributed</h1>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <canvas id="myChart" width="400" height="400"></canvas>
      </div>
    </div>
  </div>
</div><!-- /row -->
<div class="row">
  <div class="spacer col-xs-12">

  </div>
</div><!-- /row -->

<div class="row">
  <div class="non-profits col-md-3 well well-left">
    <div class="view-window">
      <div class="floating-heading">
      <h1 class="text-center main-heading">Non Profits</h1>
    </div>
      <%= render partial: "business", collection: @non_profits, as: :business %>
    </div>
  </div><!-- non-profits -->

  <div class="tasks col-md-6">
    <div class="row">
      <div class="col-xs-12 text-center">
        <% @competencies.each do |competency| %>
          <a href="/filter/<%= competency.name %>"class="btn btn-success"><h4><%= competency.name %><span class="badge pull-right"><%= competency.tasks.length %></span></h4></a>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="view-window">
          <%= render partial: "tasks/singletask", collection: @tasks, as: :task %>
        </div>
      </div>
    </div>
  </div><!-- tasks -->

  <div class="corporates col-md-3 well-right">
    <div class="view-window">
      <div class="floating-heading">
        <h1 class="text-center main-heading">Companies</h1>
      </div>
      <%= render partial: "business", collection:@for_profits, as: :business %>
    </div>
  </div><!-- corporates -->
</div><!-- /row -->
<script>
  var ctx = document.getElementById("myChart").getContext("2d");
  var myNewChart = new Chart(ctx);
  var data = {
    labels : ["Monday","Tuesday","Wednesday","Thursday","Friday", "Saturday", "Sunday"],
    datasets : [
      {
        fillColor : "rgba(220,220,220,0.5)",
        strokeColor : "rgba(220,220,220,1)",
        pointColor : "rgba(220,220,220,1)",
        pointStrokeColor : "#fff",
        data : [5,11,9,13,15]
      },

    ]
  };
  new Chart(ctx).Line(data);

</script>


